{
  "name": "core-hms-server",
  "version": "1.0.0",
  "description": "Hospital Management System - Express.js Backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "knex migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.ts",
    "seed": "knex seed:run --knexfile knexfile.ts"
  },
  "dependencies": {
    "express": "^4.21.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "knex": "^3.1.0",
    "pg": "^8.13.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "zod": "^3.23.8",
    "multer": "^1.4.5-lts.1",
    "jspdf": "^2.5.2",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^10.0.0",
    "twilio": "^5.4.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.12",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^10.0.0",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.2",
    "typescript": "~5.6.0"
  }
}
